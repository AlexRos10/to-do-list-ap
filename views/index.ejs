<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="shortcut icon" href="https://cdn.glitch.com/fb447f8f-0f58-4414-b227-a0637364d65d%2Ffavicon.ico?v=1616144571848">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.js"></script>
</head>
<body>
    <% if (theme == "Dark") { %>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #d7dbdf;">
    <% } else { %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <% } %>
        <a class="navbar-brand" href="#" style="transform: translate(10%)">
            <img src="https://cdn.glitch.com/fb447f8f-0f58-4414-b227-a0637364d65d%2Ffavicon.ico?v=1616144571848" width="30" height="30" class="d-inline-block align-top" alt="">
            To-Do App
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/account">Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/theme">Change Theme</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://alesrox.gitbook.io/to-do-api" target="_blank">API Docs</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="principal">
        <div class="wrap">        
            <div class="form">
                <h1 class="header">To-Do List</h1> 
                <form method="post" action="/add" autocomplete="off">
                    <input type="text" class="input" name="task" placeholder="Title..." required>
                    <button type="submit" class="botton">Add</button>
                </form>
            </div>
            <p id="p" class="p"></p>
        </div>
    </div>
    <div class="tasks">
        <div class="wrap-list">
            <ul class="list" id="list">
                <% tasks.forEach(function(task) { %>
                    <li>
                        <%= task %>
                        <form method="POST" action="/delete">
                            <input type="hidden" value="<%= task %>" name="task">
                            <button type="submit" class="close">X</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <div style="height: 50px;"></div>
    <% if (theme == "Dark") { %>
        <script>
            $("html").css("filter", "invert(1) hue-rotate(180deg)");
            $(".header").css("color", "black");
            $(".input").css("background-color", "#000");
            $(".input").css("border-color", "#fff");
            $(".input").css("color", "#fff");
            $(".botton").css("color", "black");
        </script>
    <% } %>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>